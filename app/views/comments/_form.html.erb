<!-- FORM TO CREATE/EDIT A COMMENT -->
<%= form_for(@comment) do |f| %>

  <%=shows_error_messages(@comment)%><br>

  <%= f.label :Add_Comment %>
  <%= f.text_field :body %><br>

  <%=id_field(@comment,@pairing)%>
  <%=id_field(@comment,@current_user)%>

  <%=f.submit :class => 'btn btn-primary'%>
<% end %>
