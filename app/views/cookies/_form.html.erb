<!-- FORM TO CREATE/EDIT A COOKIE --> 
<%= form_for @cookie  do |f| %>

  <%=shows_error_messages(@cookie)%>

  <%= f.label :name %>
  <%= f.text_field :cookie_name %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :link %>
  <%= f.text_field :link %><br>

  <%=id_field(@cookie,@current_user)%><br>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
