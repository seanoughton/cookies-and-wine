
<h3> <%= @cookie.cookie_name.titlecase %> </h3>
<h3>Description: <%= @cookie.description.titlecase %> </h3>
<h3> Here is the recipe: <%=link_to @cookie.link, @cookie.link %><br>

  <% if user_admin? %>
  <%= link_to 'Edit Cookie', edit_cooky_path(@cookie)%><br>
  <%= link_to "Delete", @cookie, method: :delete, data: {confirm: "Really?!"} %><br>
  <% end %>
  <h3> Here are all of the wines it pairs with:</h3>
<ul>
  <%@cookie.wines.each do |wine|%>
  <li>
    <%= link_to wine.wine_name, wine_path(wine) %>
  </li>
  <%end%>
</ul>

  <h3> Create a Pairing with this Cookie</h3>
  <%= form_for @pairing  do |f| %>

    <%= f.label :Wine %>
    <%= f.collection_select :wine_id, Wine.all,:id,:wine_name%>
    <%= f.hidden_field :cookie_id, value: @cookie.id %>
    <br />

    <%= f.submit %>
  <% end %> <br><br>

  <%= link_to 'Add a new Cookie', new_cooky_path%><br>
  <%= link_to 'All Cookies', cookies_path%><br>
    <%= link_to 'All Wines', wines_path%><br>
    <%= link_to 'All Pairings', pairings_path%><br>
    <%= link_to 'Home', home_url%>
