
<%= render :partial => 'layouts/navbar' %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js"></script>

<div class="container-fluid main_body_style">

  <div class="row">
    <div class="col-sm-1 ">
    </div><!--end column -->

   <div id="pairing-info" class="col-sm-10">
     <%= render 'pairing_info', pairing: @pairing %>
   </div><!--end column -->

   <div class="col-sm-1 ">
   </div><!--end column -->
 </div> <!--end row -->


 <div class="row">
   <div class="col-sm-1 ">
   </div><!--end column -->

  <div id="rating-info" class="col-sm-10 ">
    <h3>
       <%=show_rating(@pairing)%>
       <%= link_to "(Add a Rating)", new_pairing_rating_path(@pairing)%>
    </h3>
  </div><!--end column -->

  <div class="col-sm-1 ">

  </div><!--end column -->
</div> <!--end row -->

<div class="row">
  <div class="col-sm-1 ">
  </div><!--end column -->

 <div id="comment-count"class="col-sm-10 ">
   <h3>
      <%=show_comment_count(@pairing)%>
      <%= link_to "(Add a Comment)", new_pairing_comment_path(@pairing)%>
   </h3>
 </div><!--end column -->

 <div class="col-sm-1 ">
 </div><!--end column -->
</div> <!--end row -->

<div class="row">
  <div class="col-sm-1 ">
  </div><!--end column -->

 <div id="comments-link" class="col-sm-10 ">
   <h4><%= link_to 'Click here to see all the comments for this Pairing', pairing_comments_url(@pairing) %></h4><br><br>
 </div><!--end column -->

 <div class="col-sm-1 ">
 </div><!--end column -->
</div> <!--end row -->

<div class="row">
  <div class="col-sm-1 ">
  </div><!--end column -->

 <div id="edit-delete-buttons" class="col-sm-10 ">
     <%=edit_with_parent(@current_user,@pairing)%>
     <%=delete(@pairing)%>
 </div><!--end column -->


 <div class="col-sm-1 ">
 </div><!--end column -->
</div> <!--end row --><br><br>

<div class="row">
  <div class="col-sm-1 ">
  </div><!--end column -->

 <div class="col-sm-10 ">
    <%= button_tag "Previous Pairing", id: "previous" ,data: @pairing.id%>
    <%= button_tag "Next Pairing", id: "next",data: @pairing.id%>
 </div><!--end column -->


 <div class="col-sm-1 ">
 </div><!--end column -->
</div> <!--end row --><br><br><br><br><br><br><br><br>




</div><!--end container -->


<script id="pairing-template" type="text/x-handlebars-template">
  <h3><a href = "../wines/{{wineId}}">{{wineName}}</a> is paired with  <a href = "../cookies/{{cookieId}}">{{cookieName}}</a> </h3>
  <div><h2>---------------------------------------------------------</h2></div>
  <h3> Creator: <a href ="../users/{{userId}}">{{userName}}</a> </h3>
  <h3>Rating: {{userRating}} <a href = "{{id}}/ratings/new">(Add a Rating)</a><h3>
  <h3>Comments: {{commentsCount}} <a href = "{{id}}/comments/new">(Add a Comment)</a></h3>
  <h4><a href = "{{id}}/comments"> Click here to see all the comments for this Pairing</a></h4><br><br>
  <%= link_to "Edit Pairing", "/", :class=> "btn btn-warning "%>
  <%= link_to "Delete Pairing", "/", :class=> "btn btn-danger "%>
</script>
