<!-- FORM TO CREATE A RATING -->
<%= form_for(@rating) do |f| %>

  <%=shows_error_messages(@rating)%><br>

  <%= id_field(@rating,@pairing) %>
  <%= id_field(@rating,user) %>
  <%= f.label :rating_value %>
  <%= f.select :rating_value, ['1', '2', '3','4','5']%>

  <%= f.submit :class => 'btn btn-primary'%>
<% end %>
