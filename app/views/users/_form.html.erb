<!-- FORM TO CREATE/EDIT A USER -->
<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <%= render :partial => 'layouts/error_messages' %>
  <%=shows_error_messages(@user)%>

  <%= f.label :name%>
  <%= f.text_field :user_name %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %><br>

  <% if @show_password %>
    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>
  <%end%>

  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
