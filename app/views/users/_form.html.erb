<%= form_for @user, controller: 'users', action: 'create' do |f| %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="field_with_errors">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= f.label :name%>
  <%= f.text_field :user_name %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %><br>

<!-- if user logged in with facebook then they don't need to be able to change the password -->
  <% if !@user.uid %>
    <%= f.label :password, :class => 'text-white' %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation, :class => 'text-white' %>
    <%= f.password_field :password_confirmation %><br>
  <%end%>

  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
