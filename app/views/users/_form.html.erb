<%= form_for @user, controller: 'users', action: 'create' do |f| %>

<%= render :partial => 'layouts/error_messages' %>

<%=shows_error_messages(@user)%>

  <%= f.label :name%>
  <%= f.text_field :user_name %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %><br>

<!-- if user logged in with facebook then they don't need to be able to change the password -->
<!-- if the user is not a facebook user or user is the admin then show the password
you need to know that you are editing, and if the user is both a facebook login or the admin
 -->
  <% if !@user.uid #&& @edit == true #&& !@current_user.admin #&& @user == @current_user%>
    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>
  <%end%>

  <%= f.submit :class => 'btn btn-primary' %>
<% end %>
