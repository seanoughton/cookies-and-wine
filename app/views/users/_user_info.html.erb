<!-- USER SHOW PAGE -->

<h2>
  User Name: <%=@user.user_name%>
  <% if user_current_user? || user_admin? %>
    <%= link_to '(Edit Profile)', edit_user_path(@user)%><br>
    <%=delete_user(@user)%>
  <% end %>

<h2>

<% if @user.pairings.empty? && @user == @current_user %>
  <h3>
    You Don't have any Pairings
    <%= link_to "Create a Pairing", new_pairing_url%>
  </h3>
<%elsif !@user.pairings.empty? %>
  <%= link_to "Pairings for #{@user.user_name}", user_pairings_url(@user) %><br>
<%elsif @user.pairings.empty? && @user != @current_user%>
  <h3> This User has no Pairings. </h3>
<%end%>

<%= link_to "Comments made by #{@user.user_name}", user_comments_url(@user) if !@user.comments.empty?%><br>


<%= link_to "Cookies added by #{@user.user_name}", user_cookies_url(@user) if !@user.cookies.empty? %><br>


<%= link_to "Wines added by #{@user.user_name}", user_wines_url(@user) if !@user.wines.empty? %>
